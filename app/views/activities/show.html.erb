<div class="activity-header">
  <%= link_to :back, class: 'back-button' do %> <!-- link_to 'prefix selected_items' -->
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <h1><%= @activity.name %></h1>
  <h5>By <%= @activity.organiser %></h5>
</div>

<div class="activity-info">

  <div class="date">
    <h4><%= @activity.date %></h4>  
    <h5><%= @activity.time %></h5>
  </div>

  <div class="place">
    <h4><%= @activity.address %></h4>
    <h5><%= @activity.location %></h5>
  </div>

  <% if !@activity.attendees.exists?(user_id: current_user.id) %>
    <%= button_to "Attend to this activity", activity_attendees_path(@activity), method: :post, class: "btn btn-primary" %>
  <% end %>

</div>


