<%= link_to :back, class: 'back-button' do %>
  <i class="fa-solid fa-arrow-left-long"></i>
<% end %>

<div class="activities-container">
    <div class="bottom-header-section">
      <h1><%= @activity.name %></h1>
      <h5>By <%= @activity.organiser %></h5>
      <h4><%= @activity.date %></h4>
      <h4><%= @activity.address %></h4>
      <h5><%= @activity.location %></h5>
    </div>
    <%= render partial: "/shared/attendee_counter" %>
    <%= render partial: "/shared/button_attend_event", locals: { attend_text:
    "Attend to this event" }, class: 'attend-btn'%>
    <%= link_to 'Edit', edit_activity_path(@activity), class: 'edit-btn' %>
    <%= link_to 'Delete', activity_path(@activity),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this activity?' },
                class: 'delete-btn' %>
</div>
      <% if @activity.reviews.any? %>
        <% @activity.reviews.each do |r| %>
          <p><%= r.rating %></p>
          <p><%= r.description %></p>
          <p>Created by: <%= r.user.first_name %></p>
          <p>On: <%= r.created_at.strftime("%B %d, %Y") %></p>
        <% end %>
      <% else %>
        <p>No reviews</p>
      <% end %>
<%= link_to 'Add a review', new_activity_review_path(activity_id: @activity.id), class: "card-button" %>

