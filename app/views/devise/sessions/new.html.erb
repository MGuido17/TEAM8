
<div class="user-sign-in">
  <div class="navigation">
    <div class="top-section">
      <div class="left-action-icon">
        <%= link_to :back, class: 'arrow-left-icon' do %>
          <i class="fa-solid fa-arrow-left"></i>
        <% end %>
      </div>
      <div class="progress-bar">
        <div class="indicator">
        </div>
      </div>
      <div class="right-action">
        <div class="button"><p class="skip-action">Skip</p></div>
      </div>
    </div>
    <div class="lower-section">
      <div class="large-title-grp">
        <div class="page-title">Log in</div>
      </div>
    </div>
  </div>
  <div class="sign-in">
    <div class="sign-in-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions button-submit">
          <%= f.button :submit, "Log in", class: "card-button" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
