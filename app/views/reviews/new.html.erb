<%= simple_form_for [@activity, @review] do |f| %>
  <div class="field">
    <%= f.label :rating %>
    <%= f.number_field :rating, in: 1..5 %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

